    private void btsearchActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        try{
            stmt = conn.createStatement();
            String sql = "SELECT * FROM stddetails WHERE IndexNumber =  '"+txtindex.getText()+"'";
            rs = stmt.executeQuery(sql);
            if(rs.next()){
            txtName.setText(rs.getString("StdName"));
            txtSub1.setText(rs.getString("Subject1"));
            txtSub2.setText(rs.getString("Subject2"));
            txtSub3.setText(rs.getString("Subject3"));
            txtGpa.setText(rs.getString("GPA"));
            }
            
            
    }                                        
catch(Exception e){
    JOptionPane.showMessageDialog(null,e);
}
    }
